{
    "name": "reun/nanomanager",
    "description": "Modern and minimalist file manager in a single PHP file",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Reun Media",
            "email": "company@reun.eu",
            "homepage": "https://reun.eu"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "buggregator/trap": "^1.13",
        "ergebnis/composer-normalize": "^2.47",
        "friendsofphp/php-cs-fixer": "^3.86",
        "pestphp/pest": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Nanomanager\\": "src/Nanomanager",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "php -S 0.0.0.0:8080 -t tests/Integration"
        ],
        "lint": [
            "composer validate",
            "composer normalize",
            "vendor/bin/php-cs-fixer fix .",
            "vendor/bin/phpstan"
        ],
        "test": "vendor/bin/pest"
    }
}
