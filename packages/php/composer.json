{
    "name": "reun/nanomanager",
    "description": "Modern and minimalist file manager in a single PHP file",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Reun Media",
            "email": "company@reun.eu",
            "homepage": "https://reun.eu"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "buggregator/trap": "^1.13",
        "pestphp/pest": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Nanomanager\\": "src/Nanomanager",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": false,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": false
        },
        "sort-packages": true
    },
    "scripts": {
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "php -S 0.0.0.0:8080 -t tests/Integration"
        ]
    }
}
